#include <iostream>
#include <fstream>
using namespace std;

int main() {
    int repeatCode = 1;
    string inputFileName, outputFileName, testRunName;
    
    outputFileName = "output.txt"; 
    ofstream outputFile(outputFileName);

    cout << "Enter the name of the input file: ";
    cin >> inputFileName;
    cout << endl << "Enter the name of the output file: ";
    cin >> outputFileName;

    do {

        cout << "Enter the name of the test run: ";
        cin >> testRunName;

        // open simulation.txt
        ifstream fin;
        fin.open(inputFileName);
        if (!fin.good())
            cout << "I/O error. Can't find the input file! \n";

        while (fin.good()) {
            // read the line
            int line;

            // getline(fin, line);
        }

        cout << "Press 1 to run a different test. Press 0 to exit the program: ";
        cin >> repeatCode;
    } while (repeatCode != 0);
    
    if (!outputFile.is_open()) {
        cout << "Error opening the output file." << endl;
        return 1;
    }
    
    int result1 = 42;
    double result2 = 3.14;
    string result3 = "Output file testing";

    // Display and write the results
    cout << "Result 1: " << result1 << endl;
    outputFile << "Result 1: " << result1 << endl;

    cout << "Result 2: " << result2 << endl;
    outputFile << "Result 2: " << result2 << endl;

    cout << "Result 3: " << result3 << endl;
    outputFile << "Result 3: " << result3 << endl;

    outputFile.close(); // Close the output file when done

    return 0;
}

